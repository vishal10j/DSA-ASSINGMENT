#include <stdio.h>
int main() {
    int arr[] = {6, 7, 8, 9, 12, 14, 15, 18, 19, 20, 21}; // Sorted array
    int n = 11, target = 18;
    int left = 0, right = n - 1, found = 0;

    while (left <= right) {
        int mid = left + (right - left) / 2;  // Find middle index

        if (arr[mid] == target) {             // Element found
            printf("Element %d found at index %d\n", target, mid);
            found = 1;
            break;
        }

        if (arr[mid] < target)
            left = mid + 1;                   // Search in right half
        else
            right = mid - 1;                  // Search in left half
    }

    if (!found)
        printf("Element %d not found in array\n", target);

    return 0;
}
