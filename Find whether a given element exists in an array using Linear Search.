#include <stdio.h>
int main() {
    int arr[] = {7, 9, 12, 6, 5, 4};   // Array initialization
    int n = 6, target = 8, found = 0;  // 'target' is the number to find

    for (int i = 0; i < n; i++) {      // Loop through each element
        if (arr[i] == target) {        // Check if current element == target
            found = 1;
            printf("Element %d found at index %d\n", target, i);
            break;                     // Stop once found
        }
    }

    if (!found)
        printf("Element %d not found in array\n", target);

    return 0;
}
